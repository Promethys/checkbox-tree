{
    "name": "promethys/checkbox-tree",
    "description": "A Filament form component that provides hierarchical checkbox selection with parent-child relationships.",
    "keywords": [
        "promethys",
        "laravel",
        "checkbox-tree"
    ],
    "homepage": "https://github.com/promethys/checkbox-tree",
    "support": {
        "issues": "https://github.com/promethys/checkbox-tree/issues",
        "source": "https://github.com/promethys/checkbox-tree"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ilainiriko Tambaza",
            "email": "ilainiriko.tambaza@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/forms": "^3.0",
        "spatie/laravel-package-tools": "^1.15.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9|^8.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "pestphp/pest": "^2.1|^3.0",
        "pestphp/pest-plugin-arch": "*",
        "pestphp/pest-plugin-laravel": "*",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0|^2.0",
        "phpstan/phpstan-phpunit": "^1.0|^2.0"
    },
    "autoload": {
        "psr-4": {
            "Promethys\\CheckboxTree\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Promethys\\CheckboxTree\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Promethys\\CheckboxTree\\CheckboxTreeServiceProvider"
            ],
            "aliases": {
                "CheckboxTree": "Promethys\\CheckboxTree\\Facades\\CheckboxTree"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}